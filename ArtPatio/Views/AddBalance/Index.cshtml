@{
    ViewData["Title"] = "Add Balance";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Add Balance</h2>
                </div>
                <div class="card-body text-center">
                    <p class="lead">Current Balance: <span class="fw-bold text-success">@ViewBag.CurrentBalance</span></p>

                    <form method="post" asp-action="Add">
                        <div class="btn-group-vertical w-100" role="group">
                            <button type="submit" name="amount" value="50" class="btn btn-outline-primary btn-lg mb-2">Add 50</button>
                            <button type="submit" name="amount" value="100" class="btn btn-outline-primary btn-lg mb-2">Add 100</button>
                            <button type="submit" name="amount" value="500" class="btn btn-outline-primary btn-lg mb-2">Add 500</button>
                            <button type="submit" name="amount" value="1000" class="btn btn-outline-primary btn-lg">Add 1000</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
