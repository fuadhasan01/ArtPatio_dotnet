@{
    ViewData["Title"] = "About";
}

<div class="container mt-5">
    <!-- Introduction Section -->
    <div class="jumbotron text-center bg-white shadow-sm p-5 rounded">
        <h1 class="display-4">About ArtPatio</h1>
        <p class="lead">Where Creativity Meets Opportunity</p>
        <hr class="my-4">
        <p>
            ArtPatio is a digital marketplace that bridges the gap between talented artists and passionate art collectors. Our mission is to empower creators and offer art enthusiasts a platform where they can discover unique digital art from around the world.
        </p>
    </div>

    <!-- Mission Section -->
    <section class="my-5">
        <h2 class="text-center mb-4">Our Mission</h2>
        <div class="row align-items-center">
            <div class="col-md-4">
                <img src="~/images/our-mission.png" class="img-fluid rounded shadow-sm" alt="Our Mission" />
            </div>
            <div class="col-md-6">
                <p>
                    At ArtPatio, we believe in the power of creativity and community. Our goal is to make digital art accessible to everyone, while providing artists with a platform to showcase their work and reach global audiences. We value innovation, expression, and the pursuit of artistic passion.
                </p>
                <p>
                    Join us as we redefine the digital art space, making it easier for creators to connect with collectors and turn their passion into a profession.
                </p>
            </div>
        </div>
    </section>

    <!-- What We Offer Section -->
    <section class="my-5 bg-light p-5 rounded shadow-sm">
        <h2 class="text-center mb-4">What We Offer</h2>
        <div class="row">
            <div class="col-md-4 text-center">
                <i class="fas fa-paint-brush fa-3x text-primary mb-3"></i>
                <h4>For Artists</h4>
                <p>Showcase your artwork, build your brand, and reach art lovers worldwide.</p>
            </div>
            <div class="col-md-4 text-center">
                <i class="fas fa-search fa-3x text-primary mb-3"></i>
                <h4>For Collectors</h4>
                <p>Discover unique digital art from up-and-coming and established artists alike.</p>
            </div>
            <div class="col-md-4 text-center">
                <i class="fas fa-globe fa-3x text-primary mb-3"></i>
                <h4>Global Community</h4>
                <p>Join a growing network of artists and collectors from all over the world.</p>
            </div>
        </div>
    </section>

    <!-- Statistics Section -->
    <section class="my-5">
        <h2 class="text-center mb-4">ArtPatio by the Numbers</h2>
        <div class="row text-center">
            <div class="col-md-3">
                <h3 class="display-4">1K+</h3>
                <p>Artists</p>
            </div>
            <div class="col-md-3">
                <h3 class="display-4">10K+</h3>
                <p>Artworks</p>
            </div>
            <div class="col-md-3">
                <h3 class="display-4">20+</h3>
                <p>Countries</p>
            </div>
            <div class="col-md-3">
                <h3 class="display-4">5K+</h3>
                <p>Happy Collectors</p>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="my-5 text-center">
        <h2>Ready to Get Started?</h2>
        <p class="lead">Whether you're an artist or a collector, ArtPatio is the perfect place to explore, share, and buy digital art.</p>
        
        <a href="/Art/" class="btn btn-secondary btn-lg">Explore Artworks</a>
    </section>
</div>
